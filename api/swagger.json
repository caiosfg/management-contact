{
    "openapi": "3.0.0",
    "info": {
        "title": "management-contact",
        "description": "Gerencie seus contatos e seus grupos.",
        "termsOfService": "http://localhost:3333/terms",
        "contact": {
            "email": "caio.sfg@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/v1/user": {
            "post": {
                "description": "Create user",
                "requestBody": {
                    "description": "data send to create user",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RequestCreateUser"
                            }
                        }
                    }
                },
                "reponses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseCreateUser"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/session": {
            "post": {
                "description": "loggin and authenticate user",
                "requestBody": {
                    "description": "data necessary to login",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RequestAuthUser"
                            }
                        }
                    }
                },
                "reponses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseAuthUser"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/me?user_id={user_id}": {
            "get": {
                "description": "search user by id",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "id of user",
                        "required": "true",
                        "type": "string",
                        "format": "uuid"
                    }
                ],
                "reponses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ResponseCreateUser"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "RequestCreateUser": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "ResponseCreateUser": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "RequestAuthUser": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "ResponseAuthUser": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "token": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {}
    }
}